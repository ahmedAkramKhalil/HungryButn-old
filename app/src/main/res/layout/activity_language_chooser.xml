<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".main.LanguageChooser"

        >

        <RelativeLayout
            android:id="@+id/start_trans"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ar_trans"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/button_en"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_back_test"
                android:backgroundTint="#202020"
                android:backgroundTintMode="src_in"
                android:elevation="30dp"
                android:fontFamily="@font/ar"
                android:text="ENGLISH"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ar_trans"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="250dp"
            android:scrollbarFadeDuration="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/button_ar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_back_test"
                android:backgroundTint="#202020"
                android:backgroundTintMode="src_in"
                android:elevation="30dp"
                android:fontFamily="@font/ar"

                android:text="العربية"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#F0F0F0"
                android:textSize="40sp"
                android:transitionName="shared_element_container" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="145dp"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    android:clickable="true"
    android:orientation="vertical"

    >

    <FrameLayout
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_back_test"
        android:clipToPadding="false"
        android:elevation="30dp"
        android:gravity="center"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/component_img"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="center|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:src="@drawable/bun_img" />

        <TextView
            android:id="@+id/component_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/ar"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="broci bun"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:elevation="35dp"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">

            <Button
                android:id="@+id/add_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/add_min_button_back"
                android:elevation="40dp"
                android:fontFamily="@font/or_reg"
                android:text="+"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:id="@+id/mine_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_marginRight="55dp"
                android:background="@drawable/add_min_button_back"
                android:elevation="40dp"
                android:fontFamily="@font/en"
                android:text="-"

                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:id="@+id/name_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:background="@drawable/defualt_button_back"
                android:elevation="45dp"
                android:gravity="center"
                android:text="Defualt Button"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="10" />

        </FrameLayout>

    </LinearLayout>


</FrameLayout>